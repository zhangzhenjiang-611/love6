@charset "utf-8";
body,html {
	font-size: 12px;
	font-family:"宋体","Arial Black", Gadget, sans-serif;
	color: #6B506B;	
	margin: 0px;
	padding: 0px; 
	background:#ECE9D8;
}
*{margin:0px; padding:0px;}
ul,li{ font-style:normal; border-style:none; list-style:none;}
a {
	color: #6B506B;
}
.fl{float:left;}
.fr{float:right;}
.mainbody{width:425px;}
.button{width:100%; margin:auto; padding-top:20px; float:left;}
.b_in{width:110%; display:block; height:50px; float:left;}

.button div:hover{ background:#999999}
.patlist{float:left;margin-left:5px; margin-top:10px; font-size:12px; width:100%}



.patlist_tit{width:100%; height:35px; line-height:38px; background:#877454; font-weight:bold;}
.patlist_tit ul{margin-left:10px; width:110%;}
.patlist_tit ul li{float:left; width:90px; text-align:left; color:#fff; font-size:16px;}
.patlist_con{width:100%; background:#fff; float:left; overflow-x:hidden; height:250px; overflow-y:auto;}
.patlist_con ul{width:100%; height:30px; line-height:30px; padding:2px 10px; border-bottom:1px solid #B4B4B4;}
.patlist_con ul li{float:left;width:90px;  height:100%; padding-left:1px; padding-top:1px; _display:inline; font-size:14px;}
.patlist_con ul.odd{ background:#F4F4F4;}

.patlist_tit ul li.one,.patlist_con ul li.one{width:50px; overflow:hidden; white-space:nowrap; text-oveflow:ellipsis;}
.patlist_tit ul li.two,.patlist_con ul li.two{width:90px;}
.patlist_tit ul li.thr,.patlist_con ul li.thr{width:140px;}

#footer{float:left;}
#cinfo{ text-align:right; font-size:16px; margin-bottom:8px;}
.guohao_tit{ font-size:20px; margin-top:8px; float:left; height:30px; line-height:30px; margin-bottom:5px;}
.guohao_area{float:left; width:100%;}
.sub_btn3 {
	
	display: inline-block;
	zoom: 1; /* zoom and *display = ie7 hack for display:inline-block */
	*display: inline;
	vertical-align: baseline;
	margin: 0 2px;
	outline: none;
	cursor: pointer;
	text-align: center;
	font-family: Arial, Helvetica, sans-serif;
	padding: .3em 0.5em .35em;
	font-size:24px;
	text-shadow: 0 1px 1px rgba(0,0,0,.6);
	-webkit-border-radius: 3px; 
	-moz-border-radius: 3px;
	border-radius: 3px;
	-webkit-box-shadow: 0 1px 2px rgba(0,0,0,.2);
	-moz-box-shadow: 0 1px 2px rgba(0,0,0,.2);
	box-shadow: 0 1px 2px rgba(0,0,0,.2);
	color: #e8f0de;
	border: solid 1px #538312;
	background: gray;
	background: -webkit-gradient(linear, left top, left bottom, from(gray), to(gray));
	background: -moz-linear-gradient(top,  gray,  gray);
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='gray', endColorstr='gray');
	margin-right:6px;
	margin-top:-1px;
	height:28px; overflow:hidden;
	width:175px;
	floatleft;
	margin-top:0px; margin-left:8px;
}
.sub_btn3:hover {
	background: #538018;
	background: -webkit-gradient(linear, left top, left bottom, from(#6b9d28), to(#436b0c));
	background: -moz-linear-gradient(top,  #6b9d28,  #436b0c);
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#6b9d28', endColorstr='#436b0c');
	color:#fff;
}

/***大屏***/
.daping_area{width:1366px; height:768px; position:relative; overflow:hidden; background:url(../img/daping.png) no-repeat center top;}
#times{ font-size:28px; margin-left:850px; margin-top:30px; color:#000; font-family:黑体; position:absolute;}
.dp_info{ font-size:35px; margin-top:106px; float:left; padding-left:50px; color:#E604AE}
.dp_title{float:left; width:100%; margin-top:35px; padding-left:80px;}
.dp_title ul li{ font-size:35px; color:#FF5A00; width:120px;font-weight:黑体; display:inline-block; font-weight:bold;}
.dp_title ul li.one,.dp_body ul li.one{width:150px;}
.dp_title ul li.two,.dp_body ul li.two{width:200px;}
.dp_body ul li.two{width:218px;}
.dp_title ul li.thr,.dp_body ul li.thr{width:220px;}
.dp_title ul li.four,.dp_body ul li.four{ width:680px;}

.dp_body{float:left;  margin-top:38px; padding-left:80px;}
.dp_body ul{ margin-bottom:40px; margin-top:6px; float:left;}
.dp_body ul li{ display:inline-block;color:#000; font-size:32px; width:120px; font-weight:bold;}
.dp_body ul li.four span{ margin-right:40px; display:inline-block}
.dp_bottom_info{ position:absolute;font-size:35px; color:#000; font-family:黑体; width:1366px; text-align:center; margin-top:10px; left:0px; bottom:30px;}

